mixin datepicker(inline, doubled, titles={from: '', to: '', rangeTitle: ''}) 
  - let datepickerClasses = 'datepicker__input js-datepicker__input -ranged-'
  .datepicker-container(class = `js-datepicker-container${doubled ? '--separated' : ''}`)
    - if (!inline) {
      - if (doubled) {
      .dropdown(class = 'dropdown--S js-dropdown' data-type='datepicker')
        h3 #{titles.from}
        input.dropdown__input(type='text' value=value class='js-dropdown__input' placeholder='ДД.ММ.ГГГГ' readonly ) 
        +icon('expansion').dropdown__arrow
      .dropdown(class = 'dropdown--S js-dropdown' data-type='datepicker')
        h3 #{titles.to}
        input.dropdown__input(type='text' value=value class='js-dropdown__input' placeholder='ДД.ММ.ГГГГ' readonly)
        +icon('expansion').dropdown__arrow
      - } else {
      .dropdown(data-type='datepicker'  class='js-dropdown')
        h3 #{titles.rangeTitle}
        input.dropdown__input(type='text' value=value class='js-dropdown__input' placeholder='дд.мм - дд.мм' readonly)
        +icon('expansion').dropdown__arrow
      - }
    - } else {
      - datepickerClasses += ' datepicker__input--inline'
    - }

    div(class=datepickerClasses)