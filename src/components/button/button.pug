mixin button(href, text, type, mods)
  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' button--' + modsList[i].trim();
      }
    }
    if(type === 'a')
  a.button.js-button(class=allMods href=href)&attributes(attributes)!= text
    svg.button__arrow
      use(xlink:href='#arrow-right')
  - else 
  button.button.js-button(class=allMods href=href)&attributes(attributes)!= text
      