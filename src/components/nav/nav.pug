mixin nav(mods)
  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' nav--' + modsList[i].trim();
      }
    }
  .nav.js-nav(class=allMods, role='navigation')
    block

mixin nav-toggle()
  button(class='nav-toggle js-nav-toggle' type='button')
    span(class="nav-toggle__item") Menu

mixin nav__links()
  .nav__links.js-nav__links
    block

mixin nav__item(text, href, mods)
  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' nav__item--' + modsList[i].trim();
      }
    }
  - if (allMods.includes('multiple')) {
  .nav__container(class='js-nav__container')
    input.nav__item(type='button' class=allMods value=text)
    +icon('expansion').nav__arrow
    .nav__list
      block
  - }
  - else
  a.nav__item(class=allMods, href=href)!= text

