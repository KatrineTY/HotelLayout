mixin nav(mods)
  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' nav_' + modsList[i].trim();
      }
    }
  .nav(class=allMods, role='navigation')&attributes(attributes)
    block


mixin nav__item(text, href, mods)
  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' nav__item_' + modsList[i].trim();
      }
    }
  .nav__item(class=allMods,href=href)&attributes(attributes)!= text

