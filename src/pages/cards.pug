      +form-element
        +pill('888', 'люкс', 9990, 0, 300, 
        new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate()),
        new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate()))
