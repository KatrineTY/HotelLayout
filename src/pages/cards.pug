      +form-element('', 'datepicker')
        +dropdown-container('datepicker', '','', 'M,ranged,inline')(data-inline="true")
      +column-item('','', 'M-rounded')
        +card('./img/card1.jpg;https://picsum.photos/800/600; \
                https://picsum.photos/600/800;./img/card2.jpg','888', 'люкс', 9990, 145)
      +column-item('','', 'M-rounded')
        +card('./img/card2.jpg;https://picsum.photos/800/600; \
